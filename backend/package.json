{
  "name": "backend",
  "version": "1.0.0",
  "description": "BBS Backend API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "generate:openapi": "node scripts/generate-openapi.js",
    "serve:openapi": "swagger-ui-watcher openapi.json --open",
    "seed:all": "npm run seed:categories && npm run seed:users && npm run seed:posts && npm run seed:comments",
    "seed:categories": "tsx prisma/seed-scripts/seed-categories.ts",
    "seed:users": "tsx prisma/seed-scripts/seed-users.ts",
    "seed:posts": "tsx prisma/seed-scripts/seed-posts.ts",
    "seed:comments": "tsx prisma/seed-scripts/comments/seed-comments.ts",
    "db:reset": "prisma migrate reset --force && npm run seed:all",
    "test": "jest --config jest.config.js --runInBand",
    "clean": "rm -rf dist"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "6.9.0",
    "@types/multer": "^1.4.13",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.34",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "prisma": "6.9.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "yamljs": "^0.3.0",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@jest/globals": "30.0.0-beta.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.11.19",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
